<div class="h-screen w-screen flex flex-col justify-center bg-referral p-4"
	style="background-image:
	url('https://fiverr-res.cloudinary.com/q_auto/general_assets/referral_program/assets/f1/banner_background_md.jpg'); background-size: cover; background-position: center;"
>
	<div>
		<div class="py-10  w-full flex flex-col items-center  gap-5">
			<h3 class="font-bold text-5xl text-center text-white">
				Invite Friends & <br /> You Get Up To R200
			</h3>
			<p class="text-2xl font-medium text-gray-300 text-center">
				Introduce your friends to the easiest way to get things done
			</p>
			<form class="w-full md:w-4/5 bg-white p-6 md:rounded-md flex flex-col gap-8 shadow-lg">
				<div class="flex flex-col md:flex-row w-full gap-3">
					<input type="email" placeholder="Email Address"
						class="rounded-md outline-none border border-gray-200 p-2 flex-1 " />
						<span
							class="rounded-md flex text-white font-bold bg-blue-600 hover:opacity-90 active:bg-blue-900 w-full md:w-24
							justify-center items-center p-3">
							<button type="submit">
								Send
							</button>
						</span>
				</div>
				<hr />
				<div class="flex flex-col md:flex-row justify-center items-center gap-3">
					<div class="border border-gray-200 rounded-md w-full flex space-between">
						<input class="flex-1 p-2 outline-none referral-link" readOnly value="<%= @user.referral_link %>" />
						<span class="p-3 bg-gray-200  border border-gray-200 hover:bg-gray-300 hover:border-gray-300 active:bg-gray-400 active:border-gray-400 copy-button">
							<button type="button" onclick="handleCopyClick()">
								Copy Link
							</button>
						</span>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>