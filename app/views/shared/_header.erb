<% resource = User.new %> <!-- Define the Devise resource variable -->
<% resource_name = :user %> <!-- Define the Devise resource name -->
<header class="p-3 w-full">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="flex gap-2">
			<div class="w-2/5">
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full rounded-md mb-2 ", placeholder:"Username...",value: resource.email %>
				<span class="bg-red-700">
					<%= link_to "Forgot password?", new_user_password_path %>
				</span>
			</div>
			<div class="w-2/5">
				<%= f.password_field :password , placeholder:"Password...", class:"w-full rounded-md p-2
				 mb-2", value: resource.password %>
				<p class="text-[14px]">Input correct passowrd</p>
			</div>
			<div class="flex flex-col gap-2 w-1/4">
			<input type="submit" value="Login" , class=" p-2 cursor-pointer rounded-md">

				<%= link_to "Register", new_user_registration_path, class: "w-full p-2 cursor-pointer rounded-md flex justify-center items-center"%>
			</div>
		</div>
	  <%end%>
</header>